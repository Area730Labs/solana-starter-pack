{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "jsx": "react",
      "allowJs": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
  }